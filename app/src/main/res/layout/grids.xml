<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Grids"
    android:padding="10dp">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="5"
        android:columnCount="4">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_column="0"
            android:id="@+id/nathiyae"
            android:onClick="ButtonTapped"
            android:text="Nathiyae..&#10;(Rhythm) "
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_column="1"
            android:id="@+id/chellamma"
            android:onClick="ButtonTapped"
            android:text="Chellama..&#10;(Joker)"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_column="0"
            android:id="@+id/kodiaruvi"
            android:onClick="ButtonTapped"
            android:text="Kodi Aruvi.. &#10; (Mehandi Circus)"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_column="1"
            android:id="@+id/lifeofram"
            android:onClick="ButtonTapped"
            android:text="Life of Ram.. &#10;(96) "
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:layout_column="0"
            android:id="@+id/olaola"
            android:onClick="ButtonTapped"
            android:text="ola ola.. &#10;(Joker)  "
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:layout_column="1"
            android:id="@+id/anbaeperanbe"
            android:onClick="ButtonTapped"
            android:text="Peranbae..&#10;(NGK)"
            />

    </GridLayout>

</LinearLayout>